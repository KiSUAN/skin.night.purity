			<!--Landscape TVshows-->
			<posx>740</posx>
			<posy>730</posy>
			<control type="image"> 
				<description>trailer image</description>
				<posx>-70</posx>
				<posy>-70</posy>   
				<width>693</width>     
				<height>445</height> 
				<texture>dialogs/trailer_diffuse_back.png</texture>
			</control>
			<control type="videowindow" id="2">
				<posx>30</posx>
				<posy>26</posy>
				<width>500</width>
				<height>256</height>
