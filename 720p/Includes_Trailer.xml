	<include name="Trailer"><!--Landscape Season Episodes-->
		<control type="group">
			<visible>Player.HasVideo + Control.IsVisible(52) + [Container.Content(seasons) | Container.Content(episodes)]</visible>
			<animation effect="zoom" start="0" end="70" time="0" delay="0" condition="Player.HasVideo + Control.IsVisible(52) + [Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]">Conditional</animation>
