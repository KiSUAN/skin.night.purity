					<height>765</height>
					<aspectratio>keep</aspectratio>
					<texture>arcade/screen_videoback.png</texture>
					<animation effect="fade" start="0" end="100" time="1300" condition="Player.HasVideo">Conditional</animation>
				</control>
				<control type="videowindow">
