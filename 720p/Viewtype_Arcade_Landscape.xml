				<control type="group">
						<control type="image">
							<posx>6</posx>
							<posy>127</posy>
							<width>146</width>
							<height>83</height>
							<texture background="true" diffuse="episodematteNF.png">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>122</posy>
							<width>158</width>
							<height>93</height>
							<texture>episodeframeF.png</texture>
							<colordiffuse>39FFFFFF</colordiffuse>
						</control>
				</control>
			</itemlayout>
			<focusedlayout width="210" height="150">
				<control type="group">
					<control type="image">
						<posx>7</posx>
						<posy>129</posy>
						<width>244</width>
						<height>139</height>
						<texture background="true" diffuse="episodematteNF.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="rotatey" end="65" center="0,0" time="400" tween="quadratic" easing="out" />
						</animation>
					</control>
					<control type="image">
						<posx>-3</posx>
						<posy>121</posy>
						<width>263</width>
						<height>155</height>
						<texture>episodeframeF.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="rotatey" end="65" center="0,0" time="400" tween="quadratic" easing="out" />
							<effect type="fade" start="0" end="60" time="600" />
						</animation>
					</control>
					<control type="button">
						<onfocus>XBMC.PlayMedia($INFO[ListItem.Trailer]$INFO[ListItem.label].flv,1,noresume)</onfocus>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="0" end="0" time="650" />
						</animation>
					</control>
				</control>
			</focusedlayout>
		</control>

		<control type="group">
			<camera x="500" y="400" />
			<visible>Control.IsVisible(51)</visible>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>980</width>
					<height>765</height>
					<aspectratio>keep</aspectratio>
					<texture>arcade/screen.png</texture>
				</control>
				<control type="multiimage">
					<posx>300</posx>
					<posy>234</posy>
					<width>375</width>
					<height>274</height>
					<aspectratio>scale</aspectratio>
					<imagepath fallback="arcade/image_unavailable.png">$INFO[ListItem.Trailer]</imagepath>
					<fadetime>400</fadetime>
					<timeperimage>5000</timeperimage>
					<animation effect="zoom" start="100" end="0" time="800" center="500,400" tween="back" easing="inout" condition="Player.HasVideo">Conditional</animation>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
