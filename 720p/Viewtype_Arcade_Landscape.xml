				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>980</width>
					<height>765</height>
					<aspectratio>keep</aspectratio>
					<texture>arcade/cabinet.png</texture>
				</control>
				<control type="image">
					<posx>-165</posx>
					<posy>0</posy>
					<width>1304</width>
					<height>720</height>
