					<height>765</height>
					<aspectratio>keep</aspectratio>
					<texture>arcade/pad_light.png</texture>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>980</width>
					<height>765</height>
					<aspectratio>keep</aspectratio>
					<texture>arcade/screen_light.png</texture>
				</control>
				<control type="image" id="3">
