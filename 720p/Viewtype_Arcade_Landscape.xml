					<texture background="true" diffuse="arcade/pad_diffuse.png">$INFO[Container(51).listitem.property(fanart_image)]</texture>
					<animation effect="rotatex" end="89,5" center="795,70" condition="Control.IsVisible(51)">Conditional</animation>
					<visible>!Skin.HasSetting(Arcade_BackFanart)</visible>
				</control>
				<control type="image">
					<posx>-165</posx>
					<posy>0</posy>
					<width>1304</width>
					<height>720</height>
					<aspectratio>stretch</aspectratio>
					<texture background="true" diffuse="arcade/pad_diffuse.png">$INFO[ListItem.Writer,special://skin/extras/games/console/,.jpg]</texture>
					<animation effect="rotatex" end="89,5" center="795,70" condition="Control.IsVisible(51)">Conditional</animation>
					<visible>Skin.HasSetting(Arcade_BackFanart)</visible>
