			<itemlayout width="176" height="245">
				<control type="group">
				<posx>150</posx>
				<posy>0</posy>
				<animation effect="fade" start="100" end="0" time="400" delay="2800" condition="Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">Conditional</animation>
					<control type="image">
						<posx>-2</posx>
						<posy>133</posy>
						<width>28</width>
						<height>238</height>
						<texture>movie-poster/newcase.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>-2</posx>
						<posy>360</posy>
						<width>36</width>
						<height>304</height>
						<texture>movie-poster/reflect_bottom2.png</texture>
						<colordiffuse>89FFFFFF</colordiffuse>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>-149</posx>
						<posy>131</posy>
						<width>162</width>
						<height>241</height>
						<texture>movie-poster/posterview_diffuse.png</texture>
						<colordiffuse>black</colordiffuse>
					</control>
					<control type="image">
						<posx>-149</posx>
						<posy>131</posy>
						<width>162</width>
						<height>241</height>
						<texture background="true" diffuse="movie-poster/posterview_diffuse.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
					<control type="image">
						<posx>-150</posx>
						<posy>368</posy>
						<width>162</width>
						<height>241</height>
						<texture flipy="true">movie-poster/posterview_diffuse_border.png</texture>
						<fadetime>200</fadetime>
						<colordiffuse>89FFFFFF</colordiffuse>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation effect="fade" start="0" end="30" time="0" condition="true">Conditional</animation>
					</control>
					<control type="image">
						<posx>-150</posx>
						<posy>368</posy>
						<width>162</width>
						<height>241</height>
						<texture background="true" flipy="true" diffuse="movie-poster/posterview_diffuse.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<colordiffuse>89FFFFFF</colordiffuse>
						<aspectratio scalediffuse="false">stretch</aspectratio>
					</control>
				</control>
				</itemlayout>
			<focusedlayout width="220" height="515">
				<control type="group">
				<posx>140</posx>
				<posy>0</posy>
				<animation effect="zoom" start="100" end="120" time="600" delay="2800" condition="Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">Conditional</animation>
				<animation effect="slide" start="0,0" end="-280,-80" time="600" delay="2800" condition="Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">Conditional</animation>
					<control type="image">
						<posx>44</posx>
						<posy>93</posy>
						<width>36</width>
						<height>294</height>
						<texture>movie-poster/newcase.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="100" time="600" />
						</animation>
					</control>
					<control type="image">
						<posx>48</posx>
						<posy>378</posy>
						<width>48</width>
						<height>304</height>
						<texture>movie-poster/test2.png</texture>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="800" time="800" />
						</animation>
					</control>
					<control type="image">
						<posx>-148</posx>
						<posy>90</posy>
						<width>211</width>
						<height>300</height>
						<texture>movie-poster/posterview_diffuse.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
						</animation>
						<colordiffuse>black</colordiffuse>
					</control>
					<control type="image">
						<posx>-148</posx>
						<posy>390</posy>
						<width>211</width>
						<height>300</height>
						<texture flipy="true">movie-poster/posterview_diffuse.png</texture>
						<colordiffuse>ff000000</colordiffuse>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="100" time="600" />
						</animation>
					</control>
					<control type="image">
						<posx>-148</posx>
						<posy>90</posy>
						<width>211</width>
						<height>300</height>
						<texture background="true" diffuse="movie-poster/posterview_diffuse.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
						</animation>
					</control>
					<control type="image">
						<posx>-148</posx>
						<posy>386</posy>
						<width>211</width>
						<height>300</height>
						<texture flipy="true">movie-poster/posterview_diffuse_border.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="30" time="600" />
						</animation>
					</control>
					<control type="image">
						<posx>-148</posx>
						<posy>386</posy>
						<width>211</width>
						<height>300</height>
						<texture background="true" flipy="true" diffuse="movie-poster/posterview_diffuse.png">$INFO[ListItem.Icon]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="60,238" start="80" end="100" time="600" tween="back" easing="out" />
							<effect type="fade" start="0" end="70" time="600" />
						</animation>
					</control>
			</control>	
			</focusedlayout>
		</control>

		
	<control type="group">
		<visible>Control.IsVisible(55)</visible>
			<control type="image">
				<visible>!Skin.HasSetting(Poster_Fanart_ALA)</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texture>movie-poster/last-overlay.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<visible>Skin.HasSetting(Poster_Fanart_ALA) + !Skin.HasSetting(clean_poster)</visible>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>336</height>
				<texture>movie-poster/Poster_Fanart_Title_Back2.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<include>Animation_ZoomInZoomOut</include>
					<control type="label"><!--Big Title-->
						<posx>10</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>50</height>
						<aligny>center</aligny>
						<font>LiberationSans_Regular_40</font>
						<textcolor>viewheader</textcolor>
						<shadowcolor>viewheadershadow</shadowcolor>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="textbox">
						<description>Plot Movie</description>
						<posx>340</posx>
						<posy>362</posy>
						<width>600</width>
						<height>230</height>
						<align>justify</align>
						<info>ListItem.Plot</info>
						<font>LiberationSans_Regular_20</font>
						<textcolor>white</textcolor>
						<animation effect="fade"  start="0" end="100" time="400" delay="3000" condition="Control.IsVisible(55) + Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">WindowOpen</animation>
						<animation effect="slide" start="1000,0" end="0,0" time="400" delay="3600" condition="Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">Conditional</animation>
						<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
						<visible>Skin.HasSetting(PosterPlus_ALA) + substring(container.folderpath,plugin://plugin.program.advanced.launcher) + !Skin.HasSetting(Poster_Fanart_ALA)</visible>
					</control>
					<control type="image"> <!-- Games Studioflags  -->
						<width>80</width>
						<height>55</height>
						<posx>10</posx>
						<posy>660</posy>
						<aspectratio align="center">keep</aspectratio>
						<texture>$INFO[ListItem.Studio,special://skin/extras/studios/,.png]</texture> 
					</control>
			</control>
			
		<control type="grouplist">
			<posx>340</posx>
			<posy>260</posy>
			<width>600</width>
			<include>Animation_ZoomInZoomOut</include>
			<animation effect="slide" start="0,600" end="0,0" time="400" delay="3400" condition="Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">Conditional</animation>
			<animation effect="fade"  start="0" end="100" time="400" delay="3000" condition="Control.IsVisible(55) + Skin.HasSetting(PosterPlus_ALA) + !Skin.HasSetting(Poster_Fanart_ALA) + ![Container(55).OnNext | Container(55).OnPrevious]">WindowOpen</animation>
			<visible>Skin.HasSetting(PosterPlus_ALA) + substring(container.folderpath,plugin://plugin.program.advanced.launcher) + !SubString(ListItem.Icon,DefaultFolderBack.png,Left) + !Skin.HasSetting(Poster_Fanart_ALA)</visible>
				<control type="label">
					<width>600</width>
					<height>20</height>
					<aligny>center</aligny>
					<font>LiberationSans_Regular_18</font>
					<textcolor>white</textcolor>
					<label>[B][COLOR=mainblue]$LOCALIZE[515][/COLOR][/B] - $INFO[ListItem.Genre]</label>
				</control>
				<control type="label">
					<width>600</width>
					<height>20</height>
					<aligny>center</aligny>
					<font>LiberationSans_Regular_18</font>
					<textcolor>white</textcolor>
					<label>[B][COLOR=mainblue]$LOCALIZE[572][/COLOR][/B] - $INFO[ListItem.Studio]</label>
				</control>
				<control type="label">
					<width>600</width>
					<height>20</height>
					<aligny>center</aligny>
					<font>LiberationSans_Regular_18</font>
					<textcolor>white</textcolor>
					<label>[B][COLOR=mainblue]Platform[/COLOR][/B] - $INFO[ListItem.Writer]</label>
				</control>
				<control type="label">
					<width>600</width>
					<height>20</height>
					<aligny>center</aligny>
					<font>LiberationSans_Regular_18</font>
					<textcolor>white</textcolor>
					<label>[B][COLOR=mainblue]Premiered[/COLOR][/B] - $INFO[ListItem.Premiered]</label>
				</control>
		</control>
			<control type="image"> 
				<posx>0</posx>
				<posy>528</posy>   
				<width>1280</width>     
				<height>192</height> 
				<texture>common/scrollbar_back.png</texture>
				<visible>Control.HasFocus(65)</visible>
			</control>
	</control>
		
		
		<control type="scrollbar" id="65">
			<include>Animation_ZoomInZoomOut</include>
			<posx>100</posx>
			<posy>900</posy>
			<width>1080</width>
			<height>25</height>
			<visible allowhiddenfocus="true">Control.IsVisible(55) + Control.HasFocus(65)</visible>
			<texturesliderbackground>osd/osd_progress_back1.png</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus1.png</textureslidernibfocus>
			<onup>7000</onup>
			<ondown>55</ondown>
			<showonepage>true</showonepage>
			<orientation>horizontal</orientation>
			<include>Animation_CommonFade</include>
			<animation effect="slide" start="0,0" end="0,-220" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(65)">Conditional</animation>
		</control>
	</include>
	
	
</includes>