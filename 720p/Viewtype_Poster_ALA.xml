			<animation effect="zoom" start="100" end="72" time="700" condition="Skin.HasSetting(Poster_Fanart_ALA)">Conditional</animation>
			<animation effect="slide" start="0,0" end="0,160" time="700" condition="Skin.HasSetting(Poster_Fanart_ALA)">Conditional</animation>
